<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"

    >
    <TextView
        android:id="@+id/immoc_id_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="16sp"
        android:text="安卓新技能"
        android:textColor="#444"
        android:singleLine="true"
        />
    <TextView
        android:id="@+id/immoc_id_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/immoc_id_title"
        android:layout_marginTop="10dp"
        android:minLines="1"
        android:maxLines="2"
        android:text="Andriod打造万能的ListView和GrifView适配器"
        android:textColor="#898989"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/immoc_id_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/immoc_id_desc"
        android:layout_marginTop="10dp"
        android:text="2014-12-12"
        android:textColor="#898989"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/immoc_id_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/immoc_id_desc"
        android:text="10086"
        android:drawableLeft="@mipmap/ic_launcher"
        android:padding="3dp"
        android:textColor="#fff"
        android:textSize="12sp"
        android:background="#2ED667"
        android:layout_alignBottom="@+id/immoc_id_time"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>